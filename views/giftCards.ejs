<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cindel Toply Gift Cards</title>
    <link rel="stylesheet" href="styles/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
      defer
    ></script>
    <script src="javascript/index.js" defer></script>
    <title>Cindel Top-ly Gift Cards</title>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a href="/" class="display-6 text-decoration-none text-dark"
          >CINDEL TOPLY</a
        >
        <div>
          <a href="#" class="btn btn-outline-dark mx-4">NILL</a>
        </div>
      </div>
    </nav>
    <main>
      <% products.sort((a, b) => a.productId - b.productId).forEach((product) =>
      { %> <%var denominationType = product.denominationType %>
      <%if(denominationType === "RANGE"){%>
      <div class="card gift-card" style="width: 20rem">
        <img
          src="<%=product.logoUrls[0]%>"
          class="card-img-top"
          alt="<%=product.productName%>"
        />

        <div class="card-body">
          <h5 class="card-title">Product Name: <%=product.productName%></h5>
          <p class="card-text">Country: <%=product.country.name%></p>
          <p class="card-text">Product Brand: <%=product.brand.brandName%></p>
          <p class="card-text">Product ID: <%=product.productId%></p>
          <p class="card-text">Sender Fee: <%=product.senderFee%></p>
          <p class="card-text">
            Denomination Type: <%=product.denominationType%>
          </p>
          <p class="card-text">
            Recipient Currency: <%=product.recipientCurrencyCode%>
          </p>
        </div>
      </div>
      <%}else{%>
      <div class="card gift-card" style="width: 20rem">
        <img
          src="<%=product.logoUrls[0]%>"
          class="card-img-top"
          alt="<%=product.productName%>"
        />
        <div class="card-body">
          <h5 class="card-title">Product Name: <%=product.productName%></h5>
          <p class="card-text">Country: <%=product.country.name%></p>
          <p class="card-text">Product Brand: <%=product.brand.brandName%></p>
          <p class="card-text">Product ID: <%=product.productId%></p>
          <p class="card-text">Sender Fee: <%=product.senderFee%></p>
          <p class="card-text">
            Denomination Type: <%=product.denominationType%>
          </p>
          <p class="card-text">
            Recipient Currency: <%=product.recipientCurrencyCode%>
          </p>
        </div>
        <%}%>
      </div>
      <% }) %>
    </main>
  </body>
</html>
